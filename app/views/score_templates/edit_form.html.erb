<!-- Validation failure messages -->
<% if @score.errors.any? %>
  <% @score.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit score #<%= @score.id %>
</h1>

<hr>

<form action="/update_score/<%= @score.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @score.user_id %>">
  </div>

  <!-- Label and input for category_id -->
  <!--<div class="form-group">-->
  <!--  <label for="category_id">-->
  <!--    Category-->
  <!--  </label>-->

  <!--  <input type="text" id="category_id" name="category_id" class="form-control" value="<%= @score.question.chat_room.title %>">-->
  <!--</div>-->

  <!-- Label and input for question_id -->
  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <input type="text" id="question_id" name="question_id" class="form-control" value="<%= @score.question_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update score
  </button>
</form>

<hr>

<a href="/scores">
  Go back
</a>
