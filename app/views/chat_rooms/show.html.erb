<h1><%= @chat_room.title %></h1>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <!-- opening message (fix this) --> 
  <span class="text-muted">Welcome to the game.  The current question is: <%= @current_question %><br>
  <%= render @chat_room_messages %>
</div>
<hr>
Vault Array <%= $vault %>
<hr>
<p>(ANSWER IS): <%= $vault[0][1][:answer] %> </p>
<hr>


<%= form_for @message, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group">
    <%= f.text_area :body, rows: 1, class: 'form-control', autofocus: 1 %>
    <small class="text-muted">From 1 to 1000 characters.  Hit Enter or Click Post to Type.  </small>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>
