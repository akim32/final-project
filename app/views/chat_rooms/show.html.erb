<div class="form-group">
<%= form_for @message, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  
    <%= f.text_area :body, rows: 1, placeholder: "Start Chatting Here...", class: 'form-control chat', autofocus: 1 %>
